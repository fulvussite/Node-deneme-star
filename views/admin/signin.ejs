<% include ../partials/header %>
    <div class="container">

        <div class="row">
            <div class="col-3"></div>
            <div class="col-6 main-show">
                <h1>Sing In Form </h1>
                <form action="/signin" method="POST">

                    <div class="form-group">
                        <label for="emailAdress">Email address</label>
                        <input type="email" class="form-control" id="emailAdress" aria-describedby="emailHelp" placeholder="Enter email" name="username">
                    </div>
                    <div class="form-group">
                        <label for="userPassword">Password</label>
                        <input type="password" class="form-control" id="userPassword" placeholder="Password" name="password">
                    </div>
                    <button type="submit" class="btn btn-dark">Sing In</button>
                </form>

            </div>
            <div class="col-3"></div>
        </div>



    </div>