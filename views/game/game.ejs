
<% include ../partials/header %>
<div class="container">

    <div class="card-columns ">
  
      <% foundgame.forEach( (game)=>{ %>
        <div>

                    <a href="/games/<%=game._id%>" style="color: #fff;">
          
          <div class="card text-center colmuns" style="border: 2px solid #ffc300">
              <div class="card-header">
                  <h3 class="text-center">
                    <%=  game.title %>
                  </h3>
                </div>
          <img class="card-img-top" src="<%=game.image %>" >
          <div class="card-body bg-dark">
            
              <h4 class="card-text">
                  <%= game.content %>
              </h4>
              <p class="card-text">
                  <span class="text-muted">
                      <%- game.icerik.substring(0,100) %>..</p>
                  </span>
              </p>
          </div>
      </a>
     

  </div>
  <% }); %>

</div>
