
<% include ../partials/header %>
<div class="container">

    <div class="card-columns ">
  
      <% foundtv.forEach( (tv)=>{ %>
        <div>

                    <a href="/tvs/<%=tv._id%>" style="color: #fff;">
          
          <div class="card text-center colmuns" style="border: 2px solid #1139bf">
              <div class="card-header">
                  <h3 class="text-center">
                    <%=  tv.title %>
                  </h3>
                </div>
          <img class="card-img-top" src="<%=tv.image %>" >
          <div class="card-body bg-dark">
            
              <h4 class="card-text">
                  <%= tv.content %>
              </h4>
              <p class="card-text">
                  <span class="text-muted">
                      <%- tv.icerik.substring(0,100) %>..</p>
                  </span>
              </p>
          </div>
      </a>
     

  </div>
  <% }); %>

</div>
